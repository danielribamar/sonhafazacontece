@{
    var umbracoHelper = new UmbracoHelper(UmbracoContext.Current);

    if (Request.Cookies["sfa_newsletter"] != null)
    {
        return;
    }
    else
    {
        SFA.Core.Helpers.HttpHelper.AddCookie("sfa_newsletter", "true");
    }

}

<button class="btn btn-primary btn-lg" style="display:none;" data-toggle="modal" data-target="#myModalHorizontal" id="launch_modal"></button>


<div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        @umbracoHelper.GetDictionaryValue("NL_Label")
                    </h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">

                    <div class="contact-form-container">
                        <form id="newsletter-form" class="form-horizontal" role="form">
                            <div class="form-group">

                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="Name" id="nl_name" placeholder="@umbracoHelper.GetDictionaryValue("Name")" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="email" class="form-control" name="Email" id="nl_email" placeholder="Email" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-8 col-sm-2">
                                    <div class="btn custom-btn" id="send_newsletter">@umbracoHelper.GetDictionaryValue("Subscribe")</div>
                                </div>
                                @*<div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-default">Sign in</button>
                                        </div>
                                    </div>*@
                                @*<button type="submit" class="btn btn-default">@umbracoHelper.GetDictionaryValue("Subscribe")</button>*@
                            </div>
                            <div id="nl_mail_success" class="success">
                                <img src="/Sources/images/email/success.png" alt="Success!">
                                Newsletter subscrita com sucesso, verifique o seu email.
                            </div>
                            <!-- /#mail_success -->

                            <div id='nl_mail_fail' class='error'>
                                <img src="/Sources/images/email/error.png" alt="Error!">
                                Ocurreu um erro no envio da mensagem, tenta novamente
                            </div>
                        </form>


                        <!-- /#mail_fail -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



